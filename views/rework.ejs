<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>재작업 관리 - WMS 자재 관리 시스템</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="/css/styles.css">
  <style>
    .has-quantity {
      background-color: #f8f9fa;
    }
    .has-quantity:hover {
      background-color: #e9ecef;
    }
    
    /* 최근 추가된 행 강조 효과 */
    .recent-item {
      background-color: #f0f8ff !important; /* 연한 파란색 */
    }
    .recent-item:hover {
      background-color: #e6f2ff !important;
    }
    
    /* 테이블 정렬 아이콘 스타일 */
    .sortable {
      cursor: pointer;
    }
    .sortable i {
      margin-left: 5px;
    }
    
    /* 수량 셀 스타일 */
    .mqty-cell {
      background-color: #fffde7 !important; /* 연한 노란색 */
    }
    .out-qty-cell {
      background-color: #e3f2fd !important; /* 연한 파란색 */
    }
    .last-qty-cell {
      background-color: #e8f5e9 !important; /* 연한 녹색 */
    }
    .org-qty-cell, .in-total-qty-cell, .in-qty-cell, .in-bad-cell, .in-normal-cell, .in-pattern-cell, .in-misc-cell {
      background-color: #fff3e0 !important; /* 연한 주황색 */
    }
    .in-normal-cell {
        background-color: #e0f7fa !important; /* 연한 청록색 */
    }
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
      <a class="navbar-brand" href="/">
        <i class="fas fa-cubes"></i> WMS 자재 관리 시스템
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/"><i class="fas fa-home"></i> 메인</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/manage"><i class="fas fa-cogs"></i> 자재 관리</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="/rework"><i class="fas fa-tools"></i> 재작업</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/regrind"><i class="fas fa-cut"></i> 재연마</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  
  <div class="container mt-4">
    <!-- 기간 선택 필터 -->
    <div class="card mb-4">
      <div class="card-header filter-header">
        <h3 class="card-title mb-0"><i class="fas fa-filter"></i> 기간 선택</h3>
      </div>
      <div class="card-body">
        <form id="dateFilterForm" class="row g-3">
          <div class="col-md-4">
            <label for="startDate" class="form-label">시작일</label>
            <input type="date" class="form-control" id="startDate" name="startDate" value="<%= startDate %>">
          </div>
          <div class="col-md-4">
            <label for="endDate" class="form-label">종료일</label>
            <input type="date" class="form-control" id="endDate" name="endDate" value="<%= endDate %>">
          </div>
          <div class="col-md-4 d-flex align-items-end">
            <button type="submit" class="btn btn-primary me-2">
              <i class="fas fa-search"></i> 조회
            </button>
            <button type="button" class="btn btn-secondary" id="resetDates">
              <i class="fas fa-undo"></i> 초기화
            </button>
          </div>
        </form>
      </div>
    </div>

    <!-- 출고된 재작업 -->
    <div class="card mb-4">
      <div class="card-header rework-out-header">
        <h3 class="card-title mb-0"><i class="fas fa-box-open"></i> 출고된 재작업</h3>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-striped table-hover">
            <thead class="table-dark">
              <tr>
                <th data-sort="mat" class="sortable" data-order="asc">Material <i class="fas fa-sort"></i></th>
                <th data-sort="out_com" class="sortable" data-order="asc">제조사 <i class="fas fa-sort"></i></th>
                <th data-sort="out_qty" class="sortable" data-order="asc">출고수량 <i class="fas fa-sort"></i></th>
                <th data-sort="last_qty" class="sortable" data-order="asc">잔량 <i class="fas fa-sort"></i></th>
                <th data-sort="out_date" class="sortable" data-order="asc">출고일자 <i class="fas fa-sort"></i></th>
                <th data-sort="o_status" class="sortable" data-order="asc">상태 <i class="fas fa-sort"></i></th>
              </tr>
            </thead>
            <tbody>
              <% if (reworkOut && reworkOut.length > 0) { %>
                <% reworkOut.forEach(item => { %>
                  <tr class="<%= (item.OutQty > 0 || item.LastQty > 0) ? 'has-quantity' : '' %>">
                    <td data-value="<%= item.Mat || '' %>"><%= item.Mat || '' %></td>
                    <td data-value="<%= item.OutCom || '' %>"><%= item.OutCom || '' %></td>
                    <td data-value="<%= item.OutQty || 0 %>" class="quantity-cell out-qty-cell"><%= Number(item.OutQty || 0).toLocaleString('ko-KR') %></td>
                    <td data-value="<%= item.LastQty || 0 %>" class="quantity-cell last-qty-cell"><%= Number(item.LastQty || 0).toLocaleString('ko-KR') %></td>
                    <td data-value="<%= item.OutDate ? new Date(item.OutDate).getTime() : 0 %>"><%= item.OutDate ? new Date(item.OutDate).toLocaleString('ko-KR', { year: 'numeric', month: '2-digit', day: '2-digit', hour: '2-digit', minute: '2-digit', second: '2-digit', hour12: false }) : '' %></td>
                    <td data-value="<%= item.OStatus %>"><%= statusMap[item.OStatus] || '알 수 없음' %></td>
                  </tr>
                <% }); %>
              <% } else { %>
                <tr>
                  <td colspan="6" class="text-center">출고된 재작업이 없습니다.</td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <!-- 입고된 재작업 -->
    <div class="card mb-4">
      <div class="card-header rework-in-header">
        <h3 class="card-title mb-0"><i class="fas fa-box"></i> 입고된 재작업</h3>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-striped table-hover">
            <thead class="table-dark">
              <tr>
                <th data-sort="mat" class="sortable" data-order="asc">Material <i class="fas fa-sort"></i></th>
                <th data-sort="in_date" class="sortable" data-order="asc">입고일자 <i class="fas fa-sort"></i></th>
                <th data-sort="org_qty" class="sortable" data-order="asc">원수량 <i class="fas fa-sort"></i></th>
                <th data-sort="in_total_qty" class="sortable" data-order="asc">총수량 <i class="fas fa-sort"></i></th>
                <th data-sort="in_qty" class="sortable" data-order="asc">양품 <i class="fas fa-sort"></i></th>
                <th data-sort="in_bad" class="sortable" data-order="asc">불량 <i class="fas fa-sort"></i></th>
                <th data-sort="in_normal" class="sortable" data-order="asc">일반 <i class="fas fa-sort"></i></th>
                <th data-sort="in_pattern" class="sortable" data-order="asc">패턴 <i class="fas fa-sort"></i></th>
                <th data-sort="in_misc" class="sortable" data-order="asc">기타 <i class="fas fa-sort"></i></th>
                <th data-sort="in_status" class="sortable" data-order="asc">상태 <i class="fas fa-sort"></i></th>
                <th data-sort="memo" class="sortable" data-order="asc">메모 <i class="fas fa-sort"></i></th>
              </tr>
            </thead>
            <tbody>
              <% if (reworkIn && reworkIn.length > 0) { %>
                <% reworkIn.forEach(item => { %>
                  <tr class="<%= (item.OrgQty > 0 || item.InTotalQty > 0 || item.InQty > 0 || item.InNormal > 0 || item.InBad > 0 || item.InPattern > 0 || item.InMisc > 0) ? 'has-quantity' : '' %>">
                    <td data-value="<%= item.Mat || '' %>"><%= item.Mat || '' %></td>
                    <td data-value="<%= item.InDate ? new Date(item.InDate).getTime() : 0 %>"><%= item.InDate ? new Date(item.InDate).toLocaleString('ko-KR', { year: 'numeric', month: '2-digit', day: '2-digit', hour: '2-digit', minute: '2-digit', second: '2-digit', hour12: false }) : '' %></td>
                    <td data-value="<%= item.OrgQty || 0 %>" class="quantity-cell org-qty-cell"><%= Number(item.OrgQty || 0).toLocaleString('ko-KR') %></td>
                    <td data-value="<%= item.InTotalQty || 0 %>" class="quantity-cell in-total-qty-cell"><%= Number(item.InTotalQty || 0).toLocaleString('ko-KR') %></td>
                    <td data-value="<%= item.InQty || 0 %>" class="quantity-cell in-qty-cell"><%= Number(item.InQty || 0).toLocaleString('ko-KR') %></td>
                    <td data-value="<%= item.InBad || 0 %>" class="quantity-cell in-bad-cell"><%= Number(item.InBad || 0).toLocaleString('ko-KR') %></td>
                    <td data-value="<%= item.InNormal || 0 %>" class="quantity-cell in-normal-cell"><%= Number(item.InNormal || 0).toLocaleString('ko-KR') %></td>
                    <td data-value="<%= item.InPattern || 0 %>" class="quantity-cell in-pattern-cell"><%= Number(item.InPattern || 0).toLocaleString('ko-KR') %></td>
                    <td data-value="<%= item.InMisc || 0 %>" class="quantity-cell in-misc-cell"><%= Number(item.InMisc || 0).toLocaleString('ko-KR') %></td>
                    <td data-value="<%= item.InStatus %>"><%= statusMap[item.InStatus] || '알 수 없음' %></td>
                    <td data-value="<%= item.Memo || '' %>"><%= item.Memo || '' %></td>
                  </tr>
                <% }); %>
              <% } else { %>
                <tr>
                  <td colspan="11" class="text-center">입고된 재작업이 없습니다.</td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <!-- 완료된 재작업 -->
    <div class="card mb-4">
      <div class="card-header rework-completed-header">
        <h3 class="card-title mb-0"><i class="fas fa-check-circle"></i> 완료된 재작업</h3>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-striped table-hover">
            <thead class="table-dark">
              <tr>
                <th data-sort="material" class="sortable">Material</th>
                <th data-sort="date" class="sortable">완료일자</th>
                <th data-sort="original_quantity" class="sortable">원수량</th>
                <th data-sort="total_quantity" class="sortable">총수량</th>
                <th data-sort="quantity" class="sortable">입고수량</th>
                <th data-sort="normal_quantity" class="sortable">양품</th>
                <th data-sort="bad_quantity" class="sortable">불량</th>
                <th data-sort="pattern_quantity" class="sortable">일반</th>
                <th data-sort="pattern_quantity" class="sortable">패턴</th>
                <th data-sort="misc_quantity" class="sortable">기타</th>
                <th data-sort="status" class="sortable">상태</th>
                <th data-sort="memo" class="sortable">메모</th>
              </tr>
            </thead>
            <tbody>
              <% if (reworkCompleted && reworkCompleted.length > 0) { %>
                <% reworkCompleted.forEach(item => { %>
                  <tr>
                    <td><%= item.material || '' %></td>
                    <td><%= item.date ? new Date(item.date).toLocaleString('ko-KR', { year: 'numeric', month: '2-digit', day: '2-digit', hour: '2-digit', minute: '2-digit', second: '2-digit', hour12: false }) : '' %></td>
                    <td class="quantity-cell"><%= Number(item.original_quantity || 0).toLocaleString('ko-KR') %></td>
                    <td class="quantity-cell"><%= Number(item.total_quantity || 0).toLocaleString('ko-KR') %></td>
                    <td class="quantity-cell"><%= Number(item.quantity || 0).toLocaleString('ko-KR') %></td>
                    <td class="quantity-cell"><%= Number(item.normal_quantity || 0).toLocaleString('ko-KR') %></td>
                    <td class="quantity-cell"><%= Number(item.bad_quantity || 0).toLocaleString('ko-KR') %></td>
                    <td class="quantity-cell"><%= Number(item.pattern_quantity || 0).toLocaleString('ko-KR') %></td>
                    <td class="quantity-cell"><%= Number(item.pattern_quantity || 0).toLocaleString('ko-KR') %></td>
                    <td class="quantity-cell"><%= Number(item.misc_quantity || 0).toLocaleString('ko-KR') %></td>
                    <td><%= statusMap[item.status] || '알 수 없음' %></td>
                    <td><%= item.memo || '' %></td>
                  </tr>
                <% }); %>
              <% } else { %>
                <tr>
                  <td colspan="12" class="text-center">완료된 재작업이 없습니다.</td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <!-- 대기 중인 재작업 -->
    <div class="card">
      <div class="card-header rework-wait-header">
        <h3 class="card-title mb-0"><i class="fas fa-clock"></i> 대기 중인 재작업</h3>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-striped table-hover">
            <thead class="table-dark">
              <tr>
                <th data-sort="mat" class="sortable" data-order="asc">Material <i class="fas fa-sort"></i></th>
                <th data-sort="mqty" class="sortable" data-order="asc">수량 <i class="fas fa-sort"></i></th>
                <th data-sort="in_date" class="sortable" data-order="asc">날짜 <i class="fas fa-sort"></i></th>
                <th data-sort="misc" class="sortable" data-order="asc">메모 <i class="fas fa-sort"></i></th>
              </tr>
            </thead>
            <tbody>
              <% if (reworkWait && reworkWait.length > 0) { %>
                <% reworkWait.forEach(item => { %>
                  <tr class="<%= item.MQty > 0 ? 'has-quantity' : '' %>">
                    <td data-value="<%= item.Mat || '' %>"><%= item.Mat || '' %></td>
                    <td data-value="<%= item.MQty || 0 %>" class="quantity-cell mqty-cell"><%= Number(item.MQty || 0).toLocaleString('ko-KR') %></td>
                    <td data-value="<%= item.InDate ? new Date(item.InDate).getTime() : 0 %>"><%= item.InDate ? new Date(item.InDate).toLocaleString('ko-KR', { year: 'numeric', month: '2-digit', day: '2-digit', hour: '2-digit', minute: '2-digit', second: '2-digit', hour12: false }) : '' %></td>
                    <td data-value="<%= item.Misc || '' %>"><%= item.Misc || '' %></td>
                  </tr>
                <% }); %>
              <% } else { %>
                <tr>
                  <td colspan="4" class="text-center">대기 중인 재작업이 없습니다.</td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // 테이블 정렬 함수
      function sortTable(table, column, order) {
        const tbody = table.querySelector('tbody');
        const rows = Array.from(tbody.querySelectorAll('tr'));
        
        rows.sort((a, b) => {
          const aValue = a.querySelector(`td:nth-child(${column + 1})`).dataset.value;
          const bValue = b.querySelector(`td:nth-child(${column + 1})`).dataset.value;
          
          // 숫자 정렬
          if (!isNaN(aValue) && !isNaN(bValue)) {
            return order === 'asc' ? aValue - bValue : bValue - aValue;
          }
          
          // 문자열 정렬
          return order === 'asc' 
            ? aValue.localeCompare(bValue)
            : bValue.localeCompare(aValue);
        });
        
        // 정렬된 행을 테이블에 다시 추가
        rows.forEach(row => tbody.appendChild(row));
      }
      
      // 모든 테이블에 대해 정렬 이벤트 리스너 추가
      document.querySelectorAll('table').forEach(table => {
        const headers = table.querySelectorAll('th.sortable');
        
        headers.forEach((header, index) => {
          header.addEventListener('click', () => {
            const currentOrder = header.dataset.order;
            const newOrder = currentOrder === 'asc' ? 'desc' : 'asc';
            
            // 모든 헤더의 정렬 방향 초기화
            headers.forEach(h => {
              h.dataset.order = 'asc';
              const icon = h.querySelector('i');
              if (icon) icon.className = 'fas fa-sort';
            });
            
            // 현재 헤더의 정렬 방향 업데이트
            header.dataset.order = newOrder;
            const icon = header.querySelector('i');
            if (icon) icon.className = `fas fa-sort-${newOrder}`;
            
            // 테이블 정렬
            sortTable(table, index, newOrder);
          });
        });
      });

      // 날짜 초기화 버튼
      const resetDatesButton = document.getElementById('resetDates');
      if (resetDatesButton) {
        resetDatesButton.addEventListener('click', () => {
          document.getElementById('startDate').value = '<%= new Date(new Date().setDate(new Date().getDate() - 30)).toISOString().split("T")[0] %>';
          document.getElementById('endDate').value = '<%= new Date().toISOString().split("T")[0] %>';
          document.getElementById('dateFilterForm').submit();
        });
      }
    });
  </script>
</body>
</html> 